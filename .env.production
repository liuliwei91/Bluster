# Bluster博客生产环境配置
# 复制此文件为.env并根据实际环境修改配置

# 应用基础配置
RUST_LOG=info
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# 数据库配置
DATABASE_URL=sqlite:///app/data/blog.db

# Markdown渲染配置
MARKDOWN_CACHE_TTL=3600
MARKDOWN_MAX_CACHE_SIZE=1000
MARKDOWN_MAX_CONTENT_SIZE=1048576
MARKDOWN_SYNTAX_THEME=base16-ocean.dark
MARKDOWN_ENABLE_TABLES=true
MARKDOWN_ENABLE_STRIKETHROUGH=true
MARKDOWN_ENABLE_TASKLISTS=true

# 文件上传配置
FILE_UPLOAD_MAX_SIZE=5242880
FILE_UPLOAD_ALLOWED_TYPES=.md,.txt

# 安全配置
SESSION_SECRET_KEY=your-secret-key-change-in-production
ADMIN_DEFAULT_PASSWORD=admin

# 性能配置
WORKER_THREADS=4
MAX_CONNECTIONS=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=/app/logs/bluster.log

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d